---
// Importa las dependencias necesarias
import AuthBtn from "@components/ui/buttons/AuthBtn.astro";
import ContactIconBlock from "@components/ui/blocks/ContactIconBlock.astro";
import TextInput from "@components/ui/forms/input/TextInput.astro";
import EmailContactInput from "@components/ui/forms/input/EmailContactInput.astro";
import PhoneInput from "@components/ui/forms/input/PhoneInput.astro";
import TextAreaInput from "@components/ui/forms/input/TextAreaInput.astro";
import Icon from "@components/ui/icons/Icon.astro";

// Define las variables que se utilizarán en este componente
const title: string = "Contáctanos";
const subTitle: string =
  "¿Tienes preguntas o deseas discutir un proyecto? Ponte en contacto y crearemos la solución perfecta con nuestras herramientas y servicios.";
const formTitle: string = "Completa el formulario a continuación";
const formSubTitle: string = "Nos pondremos en contacto contigo en 1-2 días hábiles.";

// Componente principal de la sección de contacto
---
<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
  <div class="mx-auto max-w-2xl lg:max-w-5xl">
    <div class="text-center">
      <h1
        class="text-balance text-2xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight"
      >
        {title}
      </h1>
      <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
        {subTitle}
      </p>
    </div>

    <div class="mt-12 grid items-center gap-6 lg:grid-cols-2 lg:gap-16">
      <div class="flex flex-col rounded-xl p-4 sm:p-6 lg:p-8">
        <h2
          class="mb-8 text-xl font-bold text-neutral-700 dark:text-neutral-300"
        >
          {formTitle}
        </h2>
        <!-- Formulario para la entrada del usuario con diferentes campos de entrada.-->
        <!-- Cada campo utiliza un componente de entrada diferente para el tipo específico de entrada (texto, correo electrónico, teléfono y área de texto)-->
        <form>
          <div class="grid gap-4">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <TextInput
                id="hs-firstname-contacts"
                label="Nombre"
                name="hs-firstname-contacts"
              />
              <TextInput
                id="hs-lastname-contacts"
                label="Apellido"
                name="hs-firstname-contacts"
              />
            </div>
            <EmailContactInput id="hs-email-contacts" />
            <PhoneInput id="hs-phone-number" label="Teléfono" />
            <TextAreaInput
              id="hs-about-contacts"
              label="Detalles"
              name="hs-about-contacts"
            />
          </div>

          <div class="mt-4 grid">
            <AuthBtn title="Enviar Mensaje" />
          </div>

            <div class="mt-3 text-center">
              <p class="text-sm text-neutral-600 dark:text-neutral-400">
                {formSubTitle}
              </p>
            </div>
          </div>
        </form>

      <!-- ContactIconBlocks se utilizan para mostrar diferentes métodos de contacto, incluyendo visita a la oficina, correo electrónico, navegación en la base de conocimientos y FAQ.-->
      <div class="divide-y divide-neutral-300 dark:divide-neutral-700">
        <ContactIconBlock
          heading="Base de conocimientos"
          content="Explora todos nuestros artículos de base de conocimientos."
          isLinkVisible={true}
          linkTitle="Visitar guías y tutoriales"
          linkURL="#"
          isArrowVisible={true}
          ><Icon name="question" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="FAQ"
          content="Consulta nuestras preguntas frecuentes para respuestas rápidas y claras a consultas comunes."
          isLinkVisible={true}
          linkTitle="Visitar FAQ"
          linkURL="#"
          isArrowVisible={true}
          ><Icon name="chatBubble" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="Visítanos en la oficina"
          content="Capitanbrush UK"
          isAddressVisible={true}
          addressContent="72 Union Terrace, E10 4PE London"
          ><Icon name="mapPin" />
        </ContactIconBlock>

        <ContactIconBlock
          heading="Contáctanos por correo electrónico"
          content="¿Prefieres la comunicación escrita? Envíanos un correo electrónico a"
          isLinkVisible={true}
          linkTitle="support@Capitanbrush.uk"
          linkURL="#"
          ><Icon name="envelopeOpen" />
        </ContactIconBlock>
      </div>
    </div>
  </div>
</section>
