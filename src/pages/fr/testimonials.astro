---
// Importing necessary components
import MainLayout from "@/layouts/MainLayout.astro";

import TestimonialsSectionAlt from "@components/sections/testimonials/TestimonialsSectionAlt.astro";

// Importing necessary functions from Astro
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { SITE } from "@data/constants";

// Fetching all the product related content and sorting it by main.id
const product: CollectionEntry<"products">[] = (
  await getCollection("products")
).sort(
  (a: CollectionEntry<"products">, b: CollectionEntry<"products">) =>
    a.data.main.id - b.data.main.id
);

// Define variables for page content
const title: string = "Produits";
const subTitle: string =
  "Découvrez la durabilité et la précision des outils Capitanbrush, conçus pour les professionnels et les passionnés. Chacun de nos produits est fabriqué avec précision et conçu pour durer, vous assurant d'avoir le bon outil pour chaque tâche.";

// Testimonial data that will be rendered in the component
const testimonials = [
  // First testimonial data
  {
    content:
      " \"Lorsque j'ai fermé mon entreprise, j'ai eu la chance que Capitán Brush me conseille et me guide pour créer un CV spécifique pour les yachts, en plus de me conseiller sur les différents cours que je devais suivre. Grâce à lui, j'ai obtenu mon premier emploi sur des yachts, avec un salaire que je n'aurais jamais obtenu à terre en faisant le même travail.\" ",
    author: "Alberto Molina",
    role: "Chef sur Méga Yachts",
    avatarSrc:
      "https://images.unsplash.com/photo-1500648767791-00dcc994a43e?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
    avatarAlt: "Image Description",
  },
  // Second testimonial data
  {
    content:
      " \"J'ai suivi le cours en ligne et le mentorat, ce qui m'a aidé à trouver un emploi sur des méga yachts. Très recommandé. Sans aucun doute, une très bonne expérience.\" ",
    author: "Sara Martínez",
    role: "Hôtesse et Marin sur Méga Yachts",
    avatarSrc:
      "https://images.unsplash.com/photo-1544005313-94ddf0286df2?q=80&w=1376&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
    avatarAlt: "Image Description",
  },
  // Third testimonial data
  {
    content:
      " \"J'ai suivi le cours en ligne et le mentorat, et ce fut une expérience agréable. Cela m'a beaucoup aidé à entrer dans le secteur maritime et les méga yachts. Une bonne personne et un grand professionnel. Sans aucun doute recommandé.\" ",
    author: "Luis Jiménez",
    role: "Marin et Chef sur Méga Yachts",
    avatarSrc:
      "https://images.unsplash.com/photo-1474176857210-7287d38d27c6?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
    avatarAlt: "Image Description",
  },
];

const pageTitle: string = `Témoignages | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://capitanbrush.es/testimonials",
    url: "https://capitanbrush.es/testimonials",
    name: "Témoignages | Capitanbrush",
    description:
      "Découvrez la durabilité et la précision des outils Capitanbrush, conçus pour les professionnels et les passionnés.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://capitanbrush.es",
      name: "Capitanbrush",
      description:
        "Capitanbrush propose des outils de haute qualité et des services de construction experts pour répondre à tous vos besoins de projet.",
    },
    inLanguage: "fr-FR",
  }}
>
  <!--Testimonials section-->
  <TestimonialsSectionAlt
    title="Ce que disent nos clients"
    testimonials={testimonials}
  />
</MainLayout>
