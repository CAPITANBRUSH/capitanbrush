---
// Importer les composants nécessaires
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Importer les images nécessaires
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Programme Complet",
    subTitle:
      "Vous disposerez de quatre blocs avec un contenu détaillé et des liens vers des sites de référence.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Plans et tablette numérique avec des plans de construction.",
    imgTwo: personWorking,
    imgTwoAlt: "Personne travaillant dans le bureau",
  },
  {
    isRightSection: false,
    title: "Glossaire Nautique Espagnol / Anglais",
    subTitle:
      "Termes essentiels pour la vie à bord.",
    img: beforeAfter,
    imgAlt: "Site de construction avant et après",
    btnExists: true,
    btnTitle: "Inscrivez-vous",
    btnURL: "/contact",
  },
  {
    isRightSection: true,
    title: "Mentorat et Orientation Professionnelle",
    subTitle:
      "Session en ligne d'une heure avec un expert",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Travailleurs de construction orchestrant un projet",
    imgTwo: aerialView,
    imgTwoAlt: "Vue aérienne d'une construction gérée",
  },
  {
    isRightSection: false,
    title: "Offre d'Emploi",
    subTitle:
      "Coordonnées des recruteurs et canaux avec des offres d'emploi.",
    img: usingTools,
    imgAlt:
      "Homme en gilet orange et noir avec un casque blanc tenant un outil électrique jaune et noir",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;

---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://capitanbrush.es/content",
    "url": "https://capitanbrush.es/content",
    "name": "Services de Cours pour Travailler sur les Méga-Yachts | Capitanbrush",
    "description": "Alliant expérience et vision, Capitanbrush offre un service exceptionnel et un cours complet pour travailler dans l'industrie des méga-yachts.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://capitanbrush.es",
      "name": "Capitanbrush",
      "description": "Capitanbrush propose un cours unique pour apprendre l'industrie des méga-yachts. Atteignez la liberté financière"
    },
    "inLanguage": "fr"
  }}
>
  <MainSection
    title="Contenu du Cours"
    subTitle="Conçu pour fournir une compréhension approfondie et pratique sur comment commencer et prospérer dans l'industrie des Méga-Yachts. Des questions ? Cliquez ci-dessous pour m'envoyer un message WhatsApp et nous en discuterons."
    btnExists={true}
    btnTitle="Aller sur WhatsApp"
    btnURL="http://wa.link/9ggwrg"
  />
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesStats
    title="Ne Ratez Pas Cette Opportunité !"
    subTitle="Le cours est au prix de 150€, incluant tous les matériaux d'étude et l'accès à des ressources exclusives. Places limitées !"
    mainStatTitle="99%"
    mainStatSubTitle="De nos clients évaluent leur expérience avec Capitanbrush comme exceptionnelle"
    stats={[
      {
        stat: "99.8%",
        description: "Taux d'emploi assuré.",
      },
      {
        stat: "800+",
        description: "Étudiants inscrits",
      },
      {
        stat: "85%",
        description: "Croissance des étudiants d'une année sur l'autre",
      },
    ]}
  />
</MainLayout>
