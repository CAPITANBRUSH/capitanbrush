---
// Importer les composants nécessaires
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Importer les images nécessaires
import yachtFive from "@images/yatchs/yatch-5.png";
import yachtSeven from "@images/yatchs/yatch-7.png";
import yachtTwo from "@images/yatchs/yatch-2.png";
import yachtOne from "@images/yatchs/yatch-1.png";
import yachtThree from "@images/yatchs/yatch-3.png";
import finances from "@images/finances.png";
import resume from "@images/resume_generic.png";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Offre d'Emploi",
    subTitle:
      "Accès aux offres d'emploi nautique et aux canaux d'emploi dans les méga-yachts pour trouver un travail rapidement.",
    single: true,
    img: yachtOne,
    imgAlt: "Méga Yatch",
  },
  {
    isRightSection: false,
    title: "Introduction et Préparation",
    subTitle:
      "Introduction au monde des Méga Yachts pour vous aider à trouver un emploi.",
    img: yachtTwo,
    imgAlt: "Méga Yatch et la mer",
  },
  {
    isRightSection: true,
    title: "Vie et Travail dans les Méga Yachts",
    subTitle: "Vie et travail dans les Méga Yachts de l'intérieur.",
    single: true,
    img: yachtThree,
    imgAlt: "Les meilleures vues",
  },
  {
    isRightSection: false,
    title: "Stratégies Financières",
    subTitle: "Stratégies financières recommandées par un MBA en Finances.",
    img: finances,
    imgAlt: "Liberté financière",
  },
  {
    isRightSection: true,
    title: "Carrière, de matelot à capitaine",
    subTitle:
      "Planification de carrière à long terme dans le secteur des Méga Yachts.",
    img: yachtFive,
    imgAlt: "Pont du capitaine",
    btnExists: true,
    btnTitle: "Demandez sur WhatsApp",
    btnURL: "http://wa.link/9ggwrg",
  },
  {
    isRightSection: false,
    title: "Un CV nautique pour travailler dans les méga-yachts",
    subTitle:
      "Un CV nautique pour travailler dans les Méga Yachts avec des conseils spécialisés pour créer le vôtre.",
    img: resume,
    imgAlt: "nous créons votre CV pour travailler dans les méga-yachts",
  },
  {
    isRightSection: true,
    title: "Glossaire Nautique Espagnol / Anglais",
    subTitle: "Termes essentiels pour la vie à bord.",
    img: yachtSeven,
    imgAlt: "Vues",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://capitanbrush.fr/content",
    url: "https://capitanbrush.fr/content",
    name: "Conseils d'un expert en méga-yachts, offres d'emploi | Capitanbrush",
    description:
      "Canaux d'emploi dans les méga-yachts, stratégies financières, planification de carrière à long terme dans le secteur des méga-yachts.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://capitanbrush.fr",
      name: "Capitanbrush",
      description:
        "Capitanbrush propose un cours unique pour apprendre l'industrie des méga-yachts et atteindre la liberté financière.",
    },
    inLanguage: "fr",
  }}
>
  <MainSection
    title="Mentorat Personnalisé"
    subTitle="Une heure de conseils personnalisés pour vous, d'un expert en méga-yachts, pour résoudre vos questions et vous guider dans votre carrière."
    btnExists={false}
  />
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesStats
    title="Ne Manquez Pas Cette Opportunité !"
    subTitle="Le cours coûte 150€, comprenant tous les matériaux d'étude et l'accès à des ressources exclusives. Places limitées !"
    mainStatTitle="99%"
    mainStatSubTitle="De nos clients évaluent leur expérience avec Capitanbrush comme exceptionnelle"
    stats={[
      {
        stat: "99.8%",
        description: "Taux de travail garanti.",
      },
      {
        stat: "800+",
        description: "Étudiants inscrits",
      },
      {
        stat: "85%",
        description: "Croissance des étudiants d'année en année",
      },
    ]}
  />
</MainLayout>
