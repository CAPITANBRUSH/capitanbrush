---
// Importa los componentes necesarios
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Importa las imágenes necesarias
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Articulo {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Articulo[] = [
  {
    isRightSection: true,
    title: "Bloque 1: Introducción y Preparación",
    subTitle:
      "Se abordan secciones tales como: Tipos de megayates y sus características, mercado actual y tendencias en la industria de megayates, certificaciones internacionales (STCW, ENG1, etc.), Entrenamientos especializados y cursos adicionales y requisitos físicos y de salud",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Planos y tableta digital con planes de construcción.",
    imgTwo: personWorking,
    imgTwoAlt: "Persona trabajando en la oficina",
  },
  {
    isRightSection: false,
    title: "Bloque 2: Vida y Trabajo en Megayates",
    subTitle:
      "Rutinas diarias y responsabilidades comunes, los  roles a bordo, actividades y eventos, habilidades y actitudes, resolución de problemas, salarios y experiencias únicas.",
    img: beforeAfter,
    imgAlt: "Sitio de construcción antes y después",
    btnExists: true,
    btnTitle: "Inscríbete",
    btnURL: "/contact",
  },
  {
    isRightSection: true,
    title: "Bloque 3: Estrategias Financieras",
    subTitle:
      "Cómo ahorrar dinero mientras trabajas en megayates, Consejos para la gestión del dinero a bordo, planificación financiera, ahorro eficiente y evitar gastos innecesarios. Inversiones inteligentes para tripulantes, estrategias de inversión a corto y largo plazo. Objetivo: libertad financiera",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Trabajadores de construcción orquestando un proyecto",
    imgTwo: aerialView,
    imgTwoAlt: "Vista aérea de una construcción gestionada",
  },
  {
    isRightSection: false,
    title: "Bloque 4: Carrera, de tripulante a capitán",
    subTitle:
      "Trayectoria profesional en la industria de megayates, Formación y experiencia necesarias. Transición de los megayates a otros sectores. Opciones de carrera alternativas. Capitanbrush ofrece el curso más completo del mercado.",
    img: usingTools,
    imgAlt:
      "Hombre con chaleco naranja y negro usando casco blanco sosteniendo una herramienta eléctrica amarilla y negra",
  },
  {
    isRightSection: true,
    title: "Agenda una hora de asesoramiento",
    subTitle:
      "Para conocer más sobre el curso, dispondrás de una hora de asesoramiento profesional, te ayudaré con tu CV, resolveré tus dudas, y te daré acceso a los materiales privados del curso.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Estructura en construcción en progreso",
    imgTwo: underConstruction,
    imgTwoAlt: "Edificio en construcción en tonos marrón y gris",
    btnExists: true,
    btnTitle: "Agendar mentoría",
    btnURL: "https://calendly.com/hugolisbona/consultancy",
  },
];

const pageTitle: string = `Servicios | ${SITE.title}`;

---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://capitanbrush.es/services",
    "url": "https://capitanbrush.es/services",
    "name": "Servicio de cursos para trabajar en mega yates | Capitanbrush",
    "description": "Uniendo experiencia con tu visión, Capitanbrush ofrece un servicio excepcional y un curso completo para trabjar en la industria de los mega yates.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://capitanbrush.es",
      "name": "Capitanbrush",
      "description": "Capitanbrush ofrece un curso único para aprender la industra de los mega yates. Alcanza la libertad financiera"
    },
    "inLanguage": "es"
  }}
>
  <MainSection
    title="La guía más completa sobre el Trabajo en Mega Yates"
    subTitle="Diseñada para proporcionar una comprensión profunda y práctica sobre cómo comenzar y prosperar en la industria de los Mega Yates. A lo largo del curso, abordaremos desde los fundamentos básicos hasta las estrategias avanzadas para maximizar tu éxito y satisfacción en esta carrera única."
    btnExists={true}
    btnTitle="Agendar mentoría"
    btnURL="https://calendly.com/hugolisbona/consultancy"
  />
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesStats
    title="Valor del Curso"
    subTitle="Este curso ofrece un valor inestimable al proporcionar conocimientos detallados, recursos útiles y consejos prácticos que te prepararán para una carrera en Mega Yates. Al finalizar el curso, tendrás una comprensión clara de los requisitos del trabajo, las certificaciones necesarias, y las estrategias para encontrar y asegurar un empleo en este sector."
    mainStatTitle="99%"
    mainStatSubTitle="de nuestros clientes califican su experiencia con Capitanbrush como excepcional"
    stats={[
      {
        stat: "99.8%",
        description: "tasa de trabajo asegurado.",
      },
      {
        stat: "800+",
        description: "Alumnos inscritos",
      },
      {
        stat: "85%",
        description: "crecimiento de alumnos año tras año",
      },
    ]}
  />
</MainLayout>
