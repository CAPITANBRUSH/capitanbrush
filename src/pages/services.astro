---
// Importa los componentes necesarios
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Importa las imágenes necesarias
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Articulo {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Articulo[] = [
  {
    isRightSection: true,
    title: "Entregando Orientación Experta",
    subTitle:
      "Embarcarse en un proyecto de construcción puede ser abrumador. Con nuestros servicios de consulta profesional, te guiamos en cada etapa, asegurando que tomes decisiones informadas. Ya seas un entusiasta del bricolaje o un contratista experimentado, nuestros expertos están disponibles para ofrecer asesoramiento personalizado sobre selección de productos, alcance del proyecto y cumplimiento de regulaciones locales.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Planos y tableta digital con planes de construcción.",
    imgTwo: personWorking,
    imgTwoAlt: "Persona trabajando en la oficina",
  },
  {
    isRightSection: false,
    title: "Transformando Diseños en Realidad",
    subTitle:
      "Nuestros artesanos expertos aportan precisión y excelencia a cada proyecto de construcción. Desde instalaciones menores hasta trabajos estructurales sustanciales, ScrewFast ofrece servicios confiables de construcción para convertir tus planes en resultados tangibles. Garantizamos los más altos estándares de seguridad y mano de obra, utilizando herramientas y materiales de alta calidad de nuestro extenso inventario.",
    img: beforeAfter,
    imgAlt: "Sitio de construcción antes y después",
    btnExists: true,
    btnTitle: "Más Información",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Navegando Proyectos con Supervisión Profesional",
    subTitle:
      "La gestión efectiva de proyectos es fundamental para cualquier construcción exitosa. ScrewFast ofrece servicios de planificación exhaustiva y gestión robusta que mantienen tu proyecto a tiempo y dentro del presupuesto. Permítenos manejar las complejidades de la coordinación del flujo de trabajo, asignación de recursos y comunicación con las partes interesadas mientras tú te enfocas en tu visión.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Trabajadores de construcción orquestando un proyecto",
    imgTwo: aerialView,
    imgTwoAlt: "Vista aérea de una construcción gestionada",
  },
  {
    isRightSection: false,
    title: "Garantizando un Rendimiento Duradero",
    subTitle:
      "Nuestro compromiso con tu proyecto no termina al completarlo. ScrewFast ofrece servicios continuos de mantenimiento y soporte para garantizar la longevidad y el rendimiento de tu construcción. Desde revisiones regulares hasta asistencia de emergencia, nuestro equipo receptivo está ahí para brindar soporte sin interrupciones.",
    img: usingTools,
    imgAlt:
      "Hombre con chaleco naranja y negro usando casco blanco sosteniendo una herramienta eléctrica amarilla y negra",
  },
  {
    isRightSection: true,
    title: "Creando Estrategias a Medida para Desafíos Únicos",
    subTitle:
      "Para nuestros clientes corporativos más grandes, ScrewFast ofrece soluciones personalizadas diseñadas para enfrentar desafíos específicos de la industria. Al comprender tus necesidades únicas, diseñamos estrategias a medida para optimizar tus operaciones, mejorar la eficiencia y impulsar tu negocio hacia adelante.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Estructura en construcción en progreso",
    imgTwo: underConstruction,
    imgTwoAlt: "Edificio en construcción en tonos marrón y gris",
    btnExists: true,
    btnTitle: "Leer más",
    btnURL: "#",
  },
];

const pageTitle: string = `Servicios | ${SITE.title}`;

---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/services",
    "url": "https://screwfast.uk/services",
    "name": "Servicios de Consultoría Expertos | ScrewFast",
    "description": "Uniendo experiencia con tu visión, ScrewFast ofrece un servicio excepcional y soluciones completas en la industria de hardware y construcción, desde la consulta hasta la finalización del proyecto.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://screwfast.uk",
      "name": "ScrewFast",
      "description": "ScrewFast ofrece herramientas de hardware de primera categoría y servicios de construcción expertos para satisfacer todas tus necesidades de proyecto."
    },
    "inLanguage": "es"
  }}
>
  <MainSection
    title="Uniendo Experiencia con tu Visión"
    subTitle="En ScrewFast, nos enorgullece proporcionar soluciones completas y un servicio excepcional en la industria de hardware y construcción. Nuestro equipo experimentado está dedicado a apoyar tu proyecto desde el inicio hasta la finalización con una variedad de servicios especializados."
    btnExists={true}
    btnTitle="Programar una Consulta"
    btnURL="#"
  />
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesStats
    title="Por los Números"
    subTitle="Nuestro compromiso con la calidad y la fiabilidad se refleja en cada proyecto que emprendemos. En ScrewFast, estamos dedicados a ofrecer servicios líderes en la industria que aseguran que tus proyectos de construcción estén hechos para perdurar."
    mainStatTitle="96%"
    mainStatSubTitle="de nuestros clientes califican su experiencia con ScrewFast como excepcional"
    stats={[
      {
        stat: "99.8%",
        description: "tasa de finalización de proyectos",
      },
      {
        stat: "5,000+",
        description: "instalaciones exitosas",
      },
      {
        stat: "85%",
        description: "crecimiento de clientes año tras año",
      },
    ]}
  />
</MainLayout>
