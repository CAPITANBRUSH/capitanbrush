---
// Importa los componentes necesarios
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";

import faqs from "@data/faqs_es.json";
import pricing from "@/data_files/pricing_es.json";
import heroImage from "@images/logo-1.webp";

import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import Temario from "../pages/temario/index.astro"


---

<MainLayout lang="es">
  <HeroSection
    title={`Transforma Tu Carrera con Nuestro Curso Exclusivo sobre <span class="text-yellow-500 dark:text-yellow-400">Mega Yates!</span>`}
    subTitle="¿Sueñas con ganar más de 3000€ al mes trabajando en mega yates? Únete a nuestro curso impartido por un ingeniero experto en mega yates y descubre cómo puedes alcanzar tus metas profesionales en esta apasionante industria."
    primaryBtn="Contenido"
    primaryBtnURL="/content"
    secondaryBtn="Inscríbete ahora"
    secondaryBtnURL="/contact"
    withReview={true}
    
    rating={`<span class="font-bold">4.8</span> / 5`}
    starCount={4}
    reviews={`De más de <span class="font-bold">12.8k</span> opiniones`}
    src={heroImage}
    alt="Capitanbrush"
  />
  
  <Temario />

  <PricingSection pricing={pricing} />

  <FAQ title={`Preguntas<br />frecuentes`} faqs={faqs} />

  <HeroSectionAlt
    title="¡No te pierdas esta oportunidad!"
    subTitle="El curso tiene un precio de 150€, incluyendo todos los materiales de estudio y acceso a recursos exclusivos. ¡Plazas limitadas!"
    url="/contact"
  />
</MainLayout>
