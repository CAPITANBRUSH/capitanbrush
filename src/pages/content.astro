---
// Importa los componentes necesarios
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Importa las imágenes necesarias
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Articulo {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Articulo[] = [
  {
    isRightSection: true,
    title: "Bolsa de Empleo",
    subTitle:
      "Acceso a ofertas de empleo náutico y canales de empleo en mega yates, para que encuentres trabajo rápidamente.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Planos y tableta digital con planes de construcción.",
    imgTwo: personWorking,
    imgTwoAlt: "Persona trabajando en la oficina",
  },
  {
    isRightSection: false,
    title: "Introducción y Preparación",
    subTitle:
      "Introducción al mundo de los Mega Yates para que encuentres trabajo.",
    img: beforeAfter,
    imgAlt: "Sitio de construcción antes y después",

  },
  {
    isRightSection: true,
    title: "Vida y Trabajo en Mega Yates",
    subTitle: "Vida y trabajo en los Mega Yates desde dentro.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Trabajadores de construcción orquestando un proyecto",
    imgTwo: aerialView,
    imgTwoAlt: "Vista aérea de una construcción gestionada",
  },
  {
    isRightSection: false,
    title: "Estrategias Financieras",
    subTitle: "Estrategias financieras recomendadas por un MBA en Finanzas.",
    img: usingTools,
    imgAlt:
      "Hombre con chaleco naranja y negro usando casco blanco sosteniendo una herramienta eléctrica amarilla y negra",
  },
  {
    isRightSection: true,
    title: "Carrera, de tripulante a capitán",
    subTitle:
      "Planificación de carrera a largo plazo en el sector de los Mega Yates.",
    imgOne: constructionWorkers,
    imgOneAlt: "Trabajadores de construcción orquestando un proyecto",
    imgTwo: aerialView,
    imgTwoAlt: "Vista aérea de una construcción gestionada",
    btnExists: true,
    btnTitle: "Pregunta por whatsapp",
    btnURL: "http://wa.link/9ggwrg",
  },
  {
    isRightSection: false,
    title: "Un CV naútico para trabajar en mega yates",
    subTitle:
      "Un CV náutico para trabajar en Mega Yates de referencia y asesoramiento especializado para crear el tuyo.",
    img: usingTools,
    imgAlt:
      "Planificación de carrera a largo plazo en el sector de los Mega Yates",
  },
  {
    isRightSection: true,
    title: "Glosario Náutico Español / Inglés",
    subTitle: "Términos esenciales para la vida a bordo.",
    imgOne: constructionWorkers,
    imgOneAlt: "Glosario nautico.",
    imgTwo: aerialView,
    imgTwoAlt: "vida a bordo.",
    btnExists: true,
    btnTitle: "Agendar reunión",
    btnURL: "http://wa.link/9ggwrg",
  },
];

const pageTitle: string = `Servicios | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://capitanbrush.es/content",
    url: "https://capitanbrush.es/content",
    name: "consejos de un experto en mega yates, ofertas de empleo | Capitanbrush",
    description:
      "Canales de empleo en mega yates, estrategias financieras, planificación de carrera a largo plazo en sector mega yates.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://capitanbrush.es",
      name: "Capitanbrush",
      description:
        "Capitanbrush ofrece un curso único para aprender la industria de los mega yates y alcanza la libertad financiera",
    },
    inLanguage: "es",
  }}
>
  <MainSection
    title="Mentoría Personalizada"
    subTitle="Una hora de consejos personalizados para ti, de un experto en mega yates, para resolver tus dudas y guiarte en tu carrera."
    btnExists={true}
    btnTitle="Agendar reunión"
    btnURL="http://wa.link/9ggwrg"
  />
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesStats
    title="¡No Pierdas Esta Oportunidad!"
    subTitle="El curso tiene un precio de 150€, incluyendo todos los materiales de estudio y acceso a recursos exclusivos. ¡Plazas limitadas!"
    mainStatTitle="99%"
    mainStatSubTitle="De nuestros clientes califican su experiencia con Capitanbrush como excepcional"
    stats={[
      {
        stat: "99.8%",
        description: "Tasa de trabajo asegurado.",
      },
      {
        stat: "800+",
        description: "Alumnos inscritos",
      },
      {
        stat: "85%",
        description: "Crecimiento de alumnos año tras año",
      },
    ]}
  />
</MainLayout>
