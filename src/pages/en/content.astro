---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import yachtFive from "@images/yatchs/yatch-5.png";
import yachtSeven from "@images/yatchs/yatch-7.png";
import yachtTwo from "@images/yatchs/yatch-2.png";
import yachtOne from "@images/yatchs/yatch-1.png";
import yachtThree from "@images/yatchs/yatch-3.png";
import finances from "@images/finances.png";
import resume from "@images/resume_generic.png";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Job Board",
    subTitle:
      "Access to nautical job offers and job channels in mega yachts, so you can find work quickly.",
    single: true,
    img: yachtOne,
    imgAlt:
      "Mega Yacht",
  },
  {
    isRightSection: false,
    title: "Introduction and Preparation",
    subTitle:
      "Introduction to the world of Mega Yachts so you can find work.",
    img: yachtTwo,
    imgAlt: "Mega Yacht and the sea",
  },
  {
    isRightSection: true,
    title: "Life and Work on Mega Yachts",
    subTitle: "Life and work on Mega Yachts from the inside.",
    single: true,
    img: yachtThree,
    imgAlt:
      "The best views",
  },
  {
    isRightSection: false,
    title: "Financial Strategies",
    subTitle: "Financial strategies recommended by an MBA in Finance.",
    img: finances,
    imgAlt:
      "Financial freedom",
  },
  {
    isRightSection: true,
    title: "Career, from Crew Member to Captain",
    subTitle:
      "Long-term career planning in the Mega Yachts sector.",
    img: yachtFive,
    imgAlt:
      "Captain's deck",
    btnExists: true,
    btnTitle: "Ask on WhatsApp",
    btnURL: "http://wa.link/9ggwrg",
  },
  {
    isRightSection: false,
    title: "A Nautical CV for Working on Mega Yachts",
    subTitle:
      "A nautical CV for working on Mega Yachts with reference and specialized advice to create yours.",
    img: resume,
    imgAlt:
      "We create your CV for working on mega yachts",
  },
  {
    isRightSection: true,
    title: "Nautical Glossary Spanish / English",
    subTitle: "Essential terms for life on board.",
    img: yachtSeven,
    imgAlt:
      "Views",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://capitanbrush.es/content",
    url: "https://capitanbrush.es/content",
    name: "Mega yacht expert advice, job offers | Capitanbrush",
    description:
      "Job channels in mega yachts, financial strategies, long-term career planning in the mega yachts sector.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://capitanbrush.es",
      name: "Capitanbrush",
      description:
        "Capitanbrush offers a unique course to learn about the mega yacht industry and achieve financial freedom",
    },
    inLanguage: "en",
  }}
>
  <MainSection
    title="Personalized Mentoring"
    subTitle="One hour of personalized advice for you from a mega yacht expert to answer your questions and guide you in your career."
    btnExists={false}
  />
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesStats
    title="Don't Miss This Opportunity!"
    subTitle="The course is priced at â‚¬150, including all study materials and access to exclusive resources. Limited spots available!"
    mainStatTitle="99%"
    mainStatSubTitle="Of our clients rate their experience with Capitanbrush as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "Job placement rate.",
      },
      {
        stat: "800+",
        description: "Enrolled students",
      },
      {
        stat: "85%",
        description: "Year-over-year student growth",
      },
    ]}
  />
</MainLayout>
