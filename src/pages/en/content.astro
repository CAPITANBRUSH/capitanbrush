---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Complete Syllabus",
    subTitle:
      "You will have four blocks with detailed content and links to reference websites",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Blueprints and a digital tablet with construction plans.",
    imgTwo: usingTools,
    imgTwoAlt: "Person working in the office",
  },
  {
    isRightSection: false,
    title: "Nautical Glossary Spanish / English",
    subTitle:
      "Essential terms for life on board.",
    img: beforeAfter,
    imgAlt: "Construction site before and after",
    btnExists: true,
    btnTitle: "Sign Up",
    btnURL: "/contact",
  },
  {
    isRightSection: true,
    title: "Mentoring and Professional Guidance",
    subTitle:
      "One-hour online session with an expert",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Construction workers orchestrating a project",
    imgTwo: aerialView,
    imgTwoAlt: "Aerial view of a managed construction",
  },
  {
    isRightSection: false,
    title: "Job Board",
    subTitle:
      "Contact information of recruiters and channels with job offers.",
    img: usingTools,
    imgAlt:
      "Man in an orange and black vest with a white helmet holding a yellow and black electric tool",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;

---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://capitanbrush.es/content",
    "url": "https://capitanbrush.es/content",
    "name": "Course Services for Working on Mega Yachts | Capitanbrush",
    "description": "Combining experience with your vision, Capitanbrush offers exceptional service and a complete course for working in the mega yacht industry.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://capitanbrush.es",
      "name": "Capitanbrush",
      "description": "Capitanbrush offers a unique course to learn about the mega yacht industry. Achieve financial freedom"
    },
    "inLanguage": "en"
  }}
>
  <MainSection
    title="Course Content"
    subTitle="Designed to provide a deep and practical understanding of how to start and thrive in the Mega Yachts industry. Have questions? Click below to send me a WhatsApp message and we’ll discuss."
    btnExists={true}
    btnTitle="Go to WhatsApp"
    btnURL="http://wa.link/9ggwrg"
  />
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
          img={article.imgOne}
          imgAlt={article.imgOneAlt}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <FeaturesStats
    title="Don’t Miss This Opportunity!"
    subTitle="The course is priced at €150, including all study materials and access to exclusive resources. Limited spots available!"
    mainStatTitle="99%"
    mainStatSubTitle="Of our clients rate their experience with Capitanbrush as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "Employment rate secured.",
      },
      {
        stat: "800+",
        description: "Enrolled students",
      },
      {
        stat: "85%",
        description: "Year-over-year student growth",
      },
    ]}
  />
</MainLayout>
